			},
			"response": []
		},
		{
			"name": "Delete Review",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/reviews/{{review_id}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"reviews",
						"{{review_id}}"
					]
				},
				"description": "Delete a review (owner, moderator, or admin)"
			},
			"response": []
		},
		{
			"name": "Get Reviews for Room",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/reviews/room/{{room_id}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"reviews",
						"room",
						"{{room_id}}"
					]
				},
				"description": "Fetch all reviews for a given room"
			},
			"response": []
		},
		{
			"name": "Flag Review",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/reviews/{{review_id}}/flag?action=flag",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"reviews",
						"{{review_id}}",
						"flag"
					],
					"query": [
						{
							"key": "action",
							"value": "flag"
						}
					]
				},
				"description": "Flag a review as inappropriate (moderator/admin)"
			},
			"response": []
		},

	},
	"item": [
		{
			"name": "Submit Review",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"room_id\": {{room_id}},\n  \"rating\": 5,\n  \"comment\": \"Great room, very clean and well equipped!\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/reviews",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"reviews"
					]
				},
				"description": "User submits a review for a room"
			},
			"response": []
		},
		{
			"name": "Update Review",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"rating\": 4,\n  \"comment\": \"Updated: Good room, but projector needs maintenance.\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/reviews/{{review_id}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"reviews",
						"{{review_id}}"
					]
				},

				"url": {
					"raw": "{{base_url}}/reviews/{{review_id}}/flag?action=unflag",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"reviews",
						"{{review_id}}",
						"flag"
					],
					"query": [
						{
							"key": "action",
							"value": "unflag"
						}
					]
				},
				"description": "Remove flag from review (moderator/admin)"
			},
			"response": []
		}

{
  "dashboard": {
    "title": "Smart Meeting Room - Business Analytics",
    "tags": ["smart-meeting-room", "analytics", "business"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Total Bookings (Last 24h)",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
        "description": "Total number of bookings in the last 24 hours",
        "targets": [
          {
            "expr": "increase(booking_created_total[24h])",
            "legendFormat": "Bookings"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 2,
        "title": "Active Users (Last 24h)",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "count(count by (user_id) (increase(booking_created_total[24h])))"
          }
        ]
      },
      {
        "id": 3,
        "title": "Average Room Rating",
        "type": "gauge",
        "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "avg(room_average_rating)"
          }
        ],
        "options": {
          "min": 0,
          "max": 5
        }
      },
      {
        "id": 4,
        "title": "Room Utilization Rate",
        "type": "gauge",
        "gridPos": {"h": 6, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "avg(room_utilization_percentage)"
          }
        ],
        "options": {
          "min": 0,
          "max": 100,
          "unit": "percent"
        }
      },
      {
        "id": 5,
        "title": "Booking Frequency Over Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
        "targets": [
          {
            "expr": "rate(booking_created_total[1h])",
            "legendFormat": "Bookings per second"
          }
        ]
      },
      {
        "id": 6,
        "title": "Top 10 Most Booked Rooms",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
        "targets": [
          {
            "expr": "topk(10, sum by (room_name) (increase(booking_created_total[7d])))",
            "legendFormat": "{{room_name}}"
          }
        ]
      },
      {
        "id": 7,
        "title": "Reviews Created (Daily)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
        "targets": [
          {
            "expr": "increase(review_created_total[1d])",
            "legendFormat": "Reviews"
          }
        ]
      },
      {
        "id": 8,
        "title": "User Activity by Role",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
        "targets": [
          {
            "expr": "sum by (role) (user_activity_total)",
            "legendFormat": "{{role}}"
          }
        ]
      },
      {
        "id": 9,
        "title": "Peak Booking Hours",
        "type": "heatmap",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 22},
        "targets": [
          {
            "expr": "sum by (hour) (increase(booking_created_total[7d]))"
          }
        ]
      }
    ],
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1
  }
}
